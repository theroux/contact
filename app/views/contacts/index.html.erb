<% provide(:title, "Contacts") %>
<%= flash[:notice] %>


<p id="notice"><%= notice %></p>

<h1>Listing Contacts</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Company</th>
      <th>Email address</th>
      <th>Phone number</th>
      <th>Extension</th>
      <th>.com</th>
      <th>International</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.first_name %></td>
        <td><%= contact.last_name %></td>
        <td><%= contact.company_name %></td>
        <td><%= contact.email_address %></td>
        <td><%= contact.phone_number %></td>
        <td><%= contact.extension %></td>
        <td><%= contact.dotcom %></td>
        <td><%= contact.international %></td>

        <td><%= link_to 'Show', contact %> </td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' }, remote: true, :class => 'delete-contact' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contact', new_contact_path %>
